<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/detail.css" />
    <link rel="stylesheet" href="/stylesheets/cart.css" />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="../font/fontawesome-free-5.13.0-web/css/all.css"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="../font/fontawesome-free-5.13.0-web/css/fontawesome.min.css"
    />

    <title>Siêu thị Mart-Organic</title>
  </head>
  <body>
    <header id="header-main">
      <nav class="navbar navbar-expand-lg navbar-dark bg-custom">
        <div class="container">
          <!-- Navbar content -->
          <div class="logo">
            <a href="/" class="navbar-brand">
              <img src="./images/logo.png" alt=""
            /></a>
          </div>
          <form class="form-inline form-search mr-auto">
            <input
              class="key-word"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-success btn-search" type="submit">
              <span class="fas fa-search"></span>
            </button>
          </form>
          <div class="contact-info">
            <ul>
              <li>
                <a href="/carts" class="btn-view-cart">
                  <i class="fas fa-shopping-cart"></i> Giỏ hàng
                  <span><%= session.cart ? session.cart.count : 0; %></span></a
                >
              </li>
              <!-- <button class="navbar-toggler" type="button" datta-tongle="collapse" data-target="#navbarInfor">
                <span class="navbar-toggler-icon"></span>
              </button> -->
              <% if (session.email == undefined) { %>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle dropdown"
                  href="#"
                  id="navbarDropdown"
                  role="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  Thông tin
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a href="/users/register" class="dropdown-item" href="#">Đăng ký</a>
                  <a href="/users/login" class="dropdown-item" href="#">Đăng nhập</a>
                </div>
              </li>

              <% } else { %>
              <li>
                <a href="/users/logout" class="btn-logout">Logout</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
      <div class="navbar-bottom bg-custom">
        <div class="container">
          <!-- link  -->
          <ul class="menu">
            <li class="nav-item">
              <a class="nav-link" href="#">Tất cả sản phẩm</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Bán chạy</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Khuyến mãi</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Cẩm nang nhà bếp</a>
            </li>
          </ul>
        </div>
      </div>
    </header>
  </body>
</html>
